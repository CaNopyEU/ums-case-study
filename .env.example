# UMS Environment Variables Example
# Copy this file to .env and update with your values

# === Database ===
DB_URL=http://db:80
DB_PORT=3000

# === Server (gRPC) ===
GRPC_PORT=8081
NODE_ENV=production

# === Security ===
JWT_SECRET=your-secret-key-change-in-production

# JWT Token Expiration (according to assignment: 1 hour)
JWT_EXPIRES_IN=1h

# Bcrypt Salt Rounds (10 is recommended for production)
BCRYPT_SALT_ROUNDS=10

# === Client ===
CLIENT_PORT=8091
GRPC_SERVER_URL=server:8081

# === Logging ===
LOG_LEVEL=info
# Options: debug, info, warn, error
